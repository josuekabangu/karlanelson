<h1>Listing appointments</h1>

<table>
  <tr>
    <th>Date</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.date %></td>
    <td><%= appointment.user %></td>
    <td><%= link_to 'Show', [appointment.service, appointment] %></td>
    <td><%= link_to 'Edit', edit_service_appointment_path(appointment.service, appointment) %></td>
    <td><%= link_to 'Destroy', [appointment.service, appointment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

